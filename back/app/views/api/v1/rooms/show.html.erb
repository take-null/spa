<h1><%= @room.name %></h1>
<div id="data" data-room-id="<%= @room.id %>" data-user-id="<%= @user.id %>"></div>

<div id="container">
    <%= render @chat_messages %>
</div>

<%= form_with(model: @chat_message, url: api_v1_chat_messages_path, format: js, local: true, html:{name: "myform"}) do |f| %>
  <%= f.text_field :message %>
  <%= f.hidden_field :user_id, value: @user.id %>
  <%= f.hidden_field :room_id, value: @room.id %>
  <%= f.submit '送信' %>
<% end %>

<%= link_to 'Back', api_v1_user_rooms_path(@user) %>